---
  import BaseLayout from "../layouts/BaseLayout.astro";
  import { PROJECTS } from "../lib/data";

  export const prerender = true
  ---
<BaseLayout title={undefined} description={undefined}>
  <section>
    <h2 class="font-mono text-xs font-medium uppercase tracking-wider text-tertiary mb-6">
      Featured Work
    </h2>
    { PROJECTS.length > 0 ? (

<ul class="list-none">
      {PROJECTS.map(project => (
<li class="py-8 border-b border-border first:pt-0 last:border-b-0">
 <div class="flex items-start justify-between gap-6 mb-2">
   <div class="text-lg font-semibold">{project.title}</div>
   <span class="font-mono text-xs text-tertiary bg-background-secondary px-2 py-1 rounded-md">{project.status}</span>
                        </div>
  <p class="text-secondary mb-3 line-clamp-2">{project.desc}</p>
  <div class="flex flex-wrap gap-2">
    {project.tech.map(t => (<code class="font-mono text-xs text-tertiary" >#{t}</code>))}
  </div>
  <div class="flex gap-4">
    {project.link ? (<a href={project.link} target="_blank" class="font-mono text-xs text-accent hover:underline">Link</a>): null }
                        </div>
                </li>
      ))}
    </ul>
      ) : ( <div class="py-12 text-center">
                <div class="text-tertiary font-mono text-sm mb-2">No projects yet</div>
                <p class="text-secondary text-sm">Featured work will appear here</p>
            </div>)}
  </section>
</BaseLayout>
