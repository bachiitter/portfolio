---
import Link from "../components/link.astro";
import { PROJECTS, SOCIALS } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <main class="flex flex-col gap-10">
    <section class="flex flex-col">
      <h1>Bachitter Singh</h1>
      <p class="!mt-0 text-primary">Product Engineer</p>
      <p class="text-muted-foreground">
        Hi! I am a Product Engineer based in Vancouver, Canada. I love building
        and breaking things. Everything I have learned has been taught by my curiosity about{" "}
        <span class="font-bold">how</span> and <span class="font-bold">why</span> things
          work the way they work.
      </p>
      <p class="text-muted-foreground">
        Currently, I am building{" "}
        <Link target="_blank" rel="noreferrer" href="https://favite.co">
          favite
        </Link>, a simple bookmarking app and doing a deep dive into backend engineering and infra.
      </p>
      <p class="flex flex-col items-start gap-2">
        <ul class="my-0 ml-0 list-none text-muted-foreground">
          {SOCIALS.map((link) => (
          <li class="flex gap-1 text-sm">
            <span>{link.label}</span><span>/</span>
              <Link target="_blank" rel="noreferrer" href={link.url}>
                {link.handle}
              </Link>
            </li>
          ))}
        </ul>
      </p>
    </section>
    <section class="flex flex-col gap-6">
      <h2>Projects</h2>
      <div class="flex flex-col gap-6">
        {PROJECTS.map((project) => (
          <div>
            <div class="flex justify-between items-center gap-4">
              <h3 class="!mt-0">{project.name}</h3>
                <Link target="_blank" rel="noreferrer" href={project.link}>
                  visit
                </Link>
            </div>
            <p class="!mt-0 text-muted-foreground">{project.description}</p>
          </div>
        ))}
      </div>
    </section>
  </main
</BaseLayout>

