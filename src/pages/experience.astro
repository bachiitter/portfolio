---
  export const prerender = true;

  import BaseLayout from "../layouts/BaseLayout.astro";
  import { EXPERIENCE } from "../lib/data";
---
<BaseLayout title="Experience" description={undefined}>
  <section>
    <h2 class="font-mono text-xs font-medium uppercase tracking-wider text-tertiary mb-6">
      Experience
    </h2>
    { EXPERIENCE.length > 0 ? (

<ul class="list-none">
      {EXPERIENCE.map(item => (
<li class="py-6 border-b border-border first:pt-0 last:border-b-0">
  <div class="text-base font-semibold mb-1">{item.company}</div>
  <div class="text-secondary mb-1">{item.role}</div>
  <div class="font-mono text-xs text-tertiary">{item.date}</div>
</li>
      ))}
    </ul>
    ) : (
      <div class="py-16 text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-background-secondary mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-tertiary"><path d="M12 12h.01"/><path d="M16 6V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2"/><path d="M22 13a18.15 18.15 0 0 1-20 0"/><rect width="20" height="14" x="2" y="6" rx="2"/></svg>
        </div>
        <div class="text-tertiary font-mono text-sm mb-2">No experience yet</div>
        <p class="text-secondary text-sm">Professional experience will appear here</p>
      </div>
    )}
  </section>
</BaseLayout>
