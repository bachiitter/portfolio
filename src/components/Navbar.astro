---
import { cn } from "~/lib/utils";

const url = Astro.url;

const links: Array<{
  name: string;
  href: string;
}> = [
  {
    name: "about",
    href: "/",
  },
  {
    name: "blog",
    href: "/blog",
  },
];
---

<nav class="bg-background w-full py-2 flex gap-2" >
{links.map(link => (
<a href={link.href} class={`${cn("text-muted-foreground", url.pathname === link.href ? "text-foreground" : "" )}`} >{link.name}</a>
))}
</nav>
