{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "**/build",
      "**/dist",
      "**/node_modules",
      "**/playwright-report",
      ".vercel",
      ".vscode",
      ".astro"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "useArrowFunction": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "overrides": [
    {
      "include": ["*.astro"]
    }
  ]
}
